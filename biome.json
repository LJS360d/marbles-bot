{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "es5",
			"attributePosition": "auto",
			"lineWidth": 80,
			"indentStyle": "space",
			"indentWidth": 2,
			"lineEnding": "lf"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		},
		"formatter": {
			"enabled": true,
			"indentWidth": 1
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"recommended": true,
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"noUselessElse": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off"
			},
			"complexity": {
				"useLiteralKeys": "off",
				"noForEach": "off",
				"noStaticOnlyClass": "warn",
				"noBannedTypes": "warn",
				"useSimplifiedLogicExpression": "warn",
				"noExcessiveCognitiveComplexity": "error"
			},
			"security": {
				"recommended": true
			}
		}
	}
}
